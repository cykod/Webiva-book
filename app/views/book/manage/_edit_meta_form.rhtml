<div class='cms_form'>
<h3>Edit Page Meta Information</h3>
<br/>
   <% admin_form_for :update_page, @page, :html => {:onsubmit => 'Pages.editMetaSubmit(this); return false;' } do |f| %>

   <%= f.text_field :name, :label => 'Title', :value => @page.name, :vertical => true %>
   <%= f.text_area :description, :label => 'Description', :value => @page.description, :vertical => true, :cols => 40, :rows => 5 %>
   <%= f.text_field :reference, :label => 'Reference', :value => @page.reference, :vertical => true %>
   <%= f.hidden_field :id, :value => @page.id %>
   <%= f.cancel_submit_buttons 'Cancel', 'Submit', {:onclick=>'RedBox.close(); return false;'} %>
<br/>
<% end %>
</div>


</div>

	     
